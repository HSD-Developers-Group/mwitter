extends ../layout

block content
  body.create-message

    .container
      .row
        .col-md-8.col-md-offset-2.message-container
          !=messages()

      .row.mt20
        .col-md-8.col-md-offset-2
          form#new-message-form(action='/message', method='post')
            h3.form-create-message New Message
            textarea#new-message.form-control.mb10(rows='3', maxlength='140', placeholder='Enter your message. Max 140 characters', name='userMessage[text]', required)
            button.btn.btn-lg.btn-primary(type='submit') Send