extends layout

block content
  body.body-signup

    .container
      .row
        .col-md-4.col-md-offset-4.message-container
          !=messages()

      .row
        .col-md-4.col-md-offset-4
          form.form-signup(id="signupForm", action="/signup", method="post")
            center
              h3.form-signup-heading Please Sign up
            input.form-control(type='text', placeholder='Name', autofocus='', name='user[name]', required)
            input.form-control(type='email', placeholder='E-mail', name='user[email]', required)
            input.form-control(type='password', placeholder='Password', name='user[password]', required)
            hr
            input.form-control(type='text', placeholder='City', autofocus='', name='user[city]')
            input.form-control(type='text', placeholder='Country', name='user[country]')
            textarea.form-control(rows='4', placeholder='Information about me', name='user[info]')
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Submit

      .row
        .col-md-4.col-md-offset-4
          center
            a.btn.btn-default(href="/login")
              i.fa.fa-sign-in.mr05
              span Log in